    <script>
        // URL ×©×œ Google Apps Script
        const GOOGLE_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbxffpyixPtnfRSgrA7eSb_1eTZ_-k4Cm4kz1Me6XeyAsouEVXyE8zmmEQWZH2gDEoZg/exec';
        
        // ××©×ª× ×™× ×’×œ×•×‘×œ×™×™×
        let orders = [];
        let ordersStatus = {}; // ×©××™×¨×ª ×¡×˜×˜×•×¡ ×”×–×× ×•×ª
        let pendingChanges = {}; // ×”×’× ×” ×¢×œ ×©×™× ×•×™×™× ××§×•××™×™× - ×—×“×©!
        let isSystemActive = false;
        let refreshInterval = null;
        let autoStopTimeout = null;
        
        // ×¢×“×›×•×Ÿ ×˜×§×¡×˜ ×˜×¢×™× ×”
        function updateLoadingProgress(text) {
            const progressElement = document.getElementById('loadingProgress');
            if (progressElement) {
                progressElement.textContent = text;
            }
        }
        
        // ×”×¡×ª×¨×ª ××¡×š ×˜×¢×™× ×” ×•×”×¦×’×ª ×ª×•×›×Ÿ ×¨××©×™
        function hideLoadingScreen() {
            const loadingScreen = document.getElementById('loadingScreen');
            const mainContent = document.getElementById('mainContent');
            
            setTimeout(() => {
                loadingScreen.classList.add('hidden');
                mainContent.classList.add('visible');
            }, 500);
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×˜×¢×™× ×ª ×”×–×× ×•×ª ××”×©×¨×ª - ×¢× ×”×’× ×ª Race Conditions
        async function loadOrders() {
            if (!isSystemActive) return;
            
            try {
                console.log('×˜×•×¢×Ÿ ×”×–×× ×•×ª...');
                
                const params = new URLSearchParams({
                    action: 'getRecentOrders',
                    limit: 100
                });
                
                const response = await fetch(GOOGLE_SCRIPT_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: params
                });
                
                console.log('×ª×’×•×‘×”:', response.status);
                
                if (response.ok) {
                    const result = await response.text();
                    console.log('×ª×•×›×Ÿ ×’×•×œ××™:', result);
                    
                    try {
                        const jsonResult = JSON.parse(result);
                        console.log('JSON ××¤×•×¨×¡×¨:', jsonResult);
                        
                        if (jsonResult.success) {
                            orders = jsonResult.orders || [];
                            console.log('=== × ×˜×¢× ×• × ×ª×•× ×™× ××”×©×¨×ª ===');
                            console.log('××¡×¤×¨ ×¤×¨×™×˜×™×:', orders.length);
                            
                            // ×¢×“×›×•×Ÿ ×”×¡×˜×˜×•×¡×™× ××”×’×™×œ×™×•×Ÿ ×”×¤×¢×™×œ - ×¢× ×”×’× ×ª Race Conditions
                            const now = Date.now();
                            orders.forEach(item => {
                                if (item.orderId && item.status) {
                                    const pendingChange = pendingChanges[item.orderId];
                                    
                                    // ×× ×™×© ×©×™× ×•×™ pending ×•×¢×“×™×™×Ÿ ×œ× ×¢×‘×¨×• 5 ×©× ×™×•×ª - ×œ× ×“×•×¨×¡!
                                    if (pendingChange && (now - pendingChange.timestamp < 5000)) {
                                        console.log(`××’×Ÿ ×¢×œ ${item.orderId}: pending ${pendingChange.status} vs server ${item.status}`);
                                        return; // ×“×™×œ×•×’ - ×œ× ××¢×“×›×Ÿ
                                    }
                                    
                                    // × ×™×§×•×™ pending ×©×¢×‘×¨ ×–×× ×•
                                    if (pendingChange && (now - pendingChange.timestamp >= 5000)) {
                                        delete pendingChanges[item.orderId];
                                        console.log(`× ×™×§×•×™ pending ×™×©×Ÿ ×¢×‘×•×¨ ${item.orderId}`);
                                    }
                                    
                                    // ×¢×“×›×•×Ÿ ×¨×’×™×œ
                                    ordersStatus[item.orderId] = item.status;
                                }
                            });
                            
                            renderOrders();
                        } else {
                            console.error('×©×’×™××” ××”×©×¨×ª:', jsonResult.message);
                        }
                    } catch (e) {
                        console.error('×©×’×™××” ×‘×¤×¨×¡×•×¨ JSON:', e);
                        console.log('×ª×•×›×Ÿ ×©×œ× × ×™×ª×Ÿ ×œ×¤×¨×¡×¨:', result);
                    }
                } else {
                    console.error('×©×’×™××” ×‘×‘×§×©×”:', response.status);
                }
            } catch (error) {
                console.error('×©×’×™××” ×‘×˜×¢×™× ×ª ×”×–×× ×•×ª:', error);
            }
        }
        
        // ×”×’×“×¨×ª Page Visibility API - ×—×“×©!
        function setupPageVisibility() {
            document.addEventListener('visibilitychange', () => {
                if (document.hidden && isSystemActive) {
                    console.log('ğŸ™ˆ ×“×£ ××•×¡×ª×¨ - ×¢×•×¦×¨ ×¨×¢× ×•×Ÿ');
                    if (refreshInterval) {
                        clearInterval(refreshInterval);
                        refreshInterval = null;
                    }
                } else if (!document.hidden && isSystemActive) {
                    console.log('ğŸ‘ï¸ ×“×£ ×—×•×–×¨ - ××ª×—×™×œ ×¨×¢× ×•×Ÿ');
                    startRefreshing();
                }
            });
        }
        
        // ×”×ª×—×œ×ª ×¨×¢× ×•×Ÿ
        function startRefreshing() {
            if (refreshInterval) {
                clearInterval(refreshInterval);
            }
            // ×¨×¢× ×•×Ÿ ××”×™×¨! ×›×œ 5 ×©× ×™×•×ª ×‘××§×•× 20
            refreshInterval = setInterval(loadOrders, 5000);
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×”×¤×¢×œ×ª ×”××¢×¨×›×ª - ×”×ª×—×œ×” ××™×™×“×™×ª
        function startSystem() {
            isSystemActive = true;
            const toggleBtn = document.getElementById('toggleBtn');
            const statusInfo = document.getElementById('statusInfo');
            
            toggleBtn.textContent = '×¢×¦×•×¨ ××¢×¨×›×ª';
            toggleBtn.classList.remove('stopped');
            statusInfo.textContent = '×”××¢×¨×›×ª ×¤×¢×™×œ×” - ×›×œ 5 ×©× ×™×•×ª';
            statusInfo.classList.add('active');
            statusInfo.classList.remove('paused');
            
            // ×˜×¢×™× ×” ××™×™×“×™×ª
            loadOrders();
            
            // ×¨×¢× ×•×Ÿ ××•×˜×•××˜×™ ×›×œ 5 ×©× ×™×•×ª - ××”×™×¨!
            startRefreshing();
            
            // ×¢×¦×™×¨×” ××•×˜×•××˜×™×ª ××—×¨×™ 5 ×©×¢×•×ª
            autoStopTimeout = setTimeout(() => {
                stopSystem();
                alert('×”××¢×¨×›×ª × ×¢×¦×¨×” ××•×˜×•××˜×™×ª ××—×¨×™ 5 ×©×¢×•×ª');
            }, 5 * 60 * 60 * 1000);
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×¢×¦×™×¨×ª ×”××¢×¨×›×ª
        function stopSystem() {
            isSystemActive = false;
            const toggleBtn = document.getElementById('toggleBtn');
            const statusInfo = document.getElementById('statusInfo');
            
            toggleBtn.textContent = '×˜×¢×Ÿ ×”×–×× ×•×ª ×—×“×©×•×ª';
            toggleBtn.classList.add('stopped');
            statusInfo.textContent = '×”××¢×¨×›×ª ×œ× ×¤×¢×™×œ×”';
            statusInfo.classList.remove('active');
            statusInfo.classList.add('paused');
            
            // ×¢×¦×™×¨×ª ×”×¨×¢× ×•×Ÿ
            if (refreshInterval) {
                clearInterval(refreshInterval);
                refreshInterval = null;
            }
            
            // ×¢×¦×™×¨×ª ×”×˜×™×™××¨ ×”××•×˜×•××˜×™
            if (autoStopTimeout) {
                clearTimeout(autoStopTimeout);
                autoStopTimeout = null;
            }
            
            // ×”×¦×’×ª ××¡×š ×œ× ×¤×¢×™×œ
            const container = document.getElementById('ordersContainer');
            container.innerHTML = `
                <div class="empty-state">
                    <h3>×”××¢×¨×›×ª ×œ× ×¤×¢×™×œ×”</h3>
                    <p>×œ×—×¥ ×¢×œ "×˜×¢×Ÿ ×”×–×× ×•×ª ×—×“×©×•×ª" ×›×“×™ ×œ×”××©×™×š</p>
                </div>
            `;
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×‘×“×™×§×” ×× ×”×–×× ×” ×¨×œ×•×•× ×˜×™×ª (××”×™×•× ××• ××”×©×¢×” ×”×§×•×“××ª)
        function isRelevantTime(dateStr, timeStr) {
            if (!dateStr || !timeStr) return false;
            
            const now = new Date();
            const oneHourAgo = new Date(now.getTime() - 60 * 60 * 1000);
            
            const cleanedDate = cleanDate(dateStr);
            const cleanedTime = cleanTime(timeStr);
            
            console.log('×‘×•×“×§ ×¨×œ×•×•× ×˜×™×•×ª:', cleanedDate, cleanedTime);
            
            try {
                const dateMatch = cleanedDate.match(/(\d{1,2})\/(\d{1,2})\/(\d{4})/);
                const timeMatch = cleanedTime.match(/(\d{1,2}):(\d{2})/);
                
                if (!dateMatch || !timeMatch) {
                    console.log('×œ× ×”×¦×œ×—×ª×™ ×œ×¤×¨×¡×¨:', cleanedDate, cleanedTime);
                    return false;
                }
                
                const [, day, month, year] = dateMatch;
                const [, hour, minute] = timeMatch;
                
                const orderDate = new Date(
                    parseInt(year),
                    parseInt(month) - 1,
                    parseInt(day),
                    parseInt(hour),
                    parseInt(minute)
                );
                
                const isToday = orderDate.toDateString() === now.toDateString();
                const isFromLastHour = orderDate >= oneHourAgo && orderDate <= now;
                
                const isRelevant = isToday || isFromLastHour;
                console.log('×”×× ×¨×œ×•×•× ×˜×™:', isRelevant, '(×”×™×•×:', isToday, ', ×©×¢×” ×§×•×“××ª:', isFromLastHour, ')');
                
                return isRelevant;
                
            } catch (error) {
                console.error('×©×’×™××” ×‘×‘×“×™×§×ª ×–××Ÿ:', error);
                return false;
            }
        }
        
        // ×¤×•× ×§×¦×™×” ×œ× ×™×§×•×™ ×ª××¨×™×š
        function cleanDate(dateStr) {
            if (!dateStr) return '×œ× ×¦×•×™×Ÿ';
            
            const str = dateStr.toString();
            
            if (str.includes('GMT')) {
                const dateMatch = str.match(/(\w{3})\s+(\w{3})\s+(\d{1,2})\s+(\d{4})/);
                if (dateMatch) {
                    const [, dayName, month, day, year] = dateMatch;
                    
                    const months = {
                        'Jan': '01', 'Feb': '02', 'Mar': '03', 'Apr': '04',
                        'May': '05', 'Jun': '06', 'Jul': '07', 'Aug': '08',
                        'Sep': '09', 'Oct': '10', 'Nov': '11', 'Dec': '12'
                    };
                    
                    const monthNum = months[month] || month;
                    return `${day.padStart(2, '0')}/${monthNum}/${year}`;
                }
            }
            
            return str;
        }
        
        // ×¤×•× ×§×¦×™×” ×œ× ×™×§×•×™ ×©×¢×”
        function cleanTime(timeStr) {
            if (!timeStr) return '×œ× ×¦×•×™×Ÿ';
            
            const str = timeStr.toString();
            
            const timeMatch = str.match(/(\d{1,2}):(\d{2}):(\d{2})/);
            if (timeMatch) {
                return `${timeMatch[1].padStart(2, '0')}:${timeMatch[2]}`;
            }
            
            return str;
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×”×¦×’×ª ×”×”×–×× ×•×ª
        function renderOrders() {
            if (!isSystemActive) return;
            
            const container = document.getElementById('ordersContainer');
            
            if (orders.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>××™×Ÿ ×”×–×× ×•×ª</h3>
                        <p>×”×–×× ×•×ª ×—×“×©×•×ª ×™×•×¤×™×¢×• ×›××Ÿ ××•×˜×•××˜×™×ª</p>
                    </div>
                `;
                return;
            }
            
            console.log('=== ××ª×—×™×œ ×¤×™×œ×˜×•×¨ ×–×× ×™× ===');
            console.log('×¡×”"×› ×¤×¨×™×˜×™× ×œ×¤× ×™ ×¤×™×œ×˜×•×¨:', orders.length);
            
            const relevantItems = orders.filter(item => {
                const result = isRelevantTime(item.date, item.time);
                if (!result) {
                    console.log('××¡× ×Ÿ ×¤×¨×™×˜:', item.customerName, item.date, item.time);
                }
                return result;
            });
            
            console.log('×¤×¨×™×˜×™× ××—×¨×™ ×¤×™×œ×˜×•×¨:', relevantItems.length);
            
            if (relevantItems.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>××™×Ÿ ×”×–×× ×•×ª ×¨×œ×•×•× ×˜×™×•×ª</h3>
                        <p>×”×–×× ×•×ª ××”×™×•× ××• ××”×©×¢×” ×”×§×•×“××ª ×™×•×¤×™×¢×• ×›××Ÿ ××•×˜×•××˜×™×ª</p>
                    </div>
                `;
                return;
            }
            
            const tableHTML = `
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th class="date-cell">×ª××¨×™×š</th>
                            <th class="time-cell">×©×¢×”</th>
                            <th class="name-cell">××–××™×Ÿ</th>
                            <th class="products-cell">×”×–×× ×”</th>
                            <th class="status-cell">×¡×˜×˜×•×¡</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${relevantItems.map(item => createOrderRow(item)).join('')}
                    </tbody>
                </table>
            `;
            
            container.innerHTML = tableHTML;
            
            setupStatusEventListeners();
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×™×¦×™×¨×ª ×©×•×¨×ª ×”×–×× ×”
        function createOrderRow(item) {
            const itemId = item.orderId;
            const currentStatus = ordersStatus[itemId] || item.status || 'pending';
            
            const statusLabels = { pending: '×××ª×™×Ÿ', preparing: '×‘×”×›× ×”', ready: '××•×›×Ÿ' };
            const statusOptions = ['pending', 'preparing', 'ready'];
            
            const switchHTML = `
                <div class="status-switch" data-order-id="${itemId}">
                    ${statusOptions.map(status => `
                        <div class="status-option ${status} ${status === currentStatus ? 'active' : ''}" 
                             data-status="${status}">
                            ${statusLabels[status]}
                        </div>
                    `).join('')}
                </div>
            `;
            
            const nextStatus = getNextStatus(currentStatus);
            const singleBtnHTML = `
                <button class="status-single-btn ${currentStatus}" data-order-id="${itemId}" data-next-status="${nextStatus}">
                    ${statusLabels[currentStatus]}
                </button>
            `;
            
            const cleanedDate = cleanDate(item.date);
            const cleanedTime = cleanTime(item.time);
            
            return `
                <tr>
                    <td class="date-cell">${cleanedDate}</td>
                    <td class="time-cell">${cleanedTime}</td>
                    <td class="name-cell">${item.customerName}</td>
                    <td class="products-cell">${item.products}</td>
                    <td class="status-cell">
                        ${switchHTML}
                        ${singleBtnHTML}
                    </td>
                </tr>
            `;
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×§×‘×œ×ª ×”×¡×˜×˜×•×¡ ×”×‘×
        function getNextStatus(currentStatus) {
            const statusFlow = {
                'pending': 'preparing',
                'preparing': 'ready',
                'ready': 'pending'
            };
            return statusFlow[currentStatus] || 'pending';
        }
        
        // ×¤×•× ×§×¦×™×” ×œ×”×•×¡×¤×ª Event Listeners
        function setupStatusEventListeners() {
            document.querySelectorAll('.status-switch').forEach(switchElement => {
                switchElement.addEventListener('click', (e) => {
                    if (e.target.classList.contains('status-option')) {
                        const itemId = switchElement.dataset.orderId;
                        const newStatus = e.target.dataset.status;
                        window.changeOrderStatus(itemId, newStatus);
                    }
                });
            });
            
            document.querySelectorAll('.status-single-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const itemId = btn.dataset.orderId;
                    const nextStatus = btn.dataset.nextStatus;
                    window.changeOrderStatus(itemId, nextStatus);
                });
            });
        }
        
        // ×¢×“×›×•×Ÿ ×¡×˜×˜×•×¡ ×‘×’×™×œ×™×•×Ÿ
        async function updateStatusInSheet(itemId, newStatus) {
            try {
                const params = new URLSearchParams({
                    action: 'updateStatus',
                    orderId: itemId,
                    newStatus: newStatus
                });
                
                console.log('URL ×©× ×©×œ×—:', params.toString());
                
                const response = await fetch(GOOGLE_SCRIPT_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: params
                });
                
                console.log('Response status:', response.status);
                console.log('Response ok:', response.ok);
                
                if (response.ok) {
                    const result = await response.text();
                    console.log('×ª×•×›×Ÿ ×ª×©×•×‘×” ×’×•×œ××™:', result);
                    
                    try {
                        const jsonResult = JSON.parse(result);
                        console.log('×ª×•×›×Ÿ ×ª×©×•×‘×” ××¤×•×¨×¡×¨:', jsonResult);
                        return jsonResult.success;
                    } catch (parseError) {
                        console.error('×©×’×™××” ×‘×¤×¨×¡×•×¨ JSON:', parseError);
                        console.log('×”×ª×•×›×Ÿ ×©×œ× × ×™×ª×Ÿ ×œ×¤×¨×¡×¨:', result);
                        return false;
                    }
                } else {
                    console.error('×©×’×™××” ×‘×‘×§×©×” HTTP:', response.status);
                    return false;
                }
            } catch (error) {
                console.error('×©×’×™××” ×›×œ×œ×™×ª ×‘×¢×“×›×•×Ÿ ×¡×˜×˜×•×¡:', error);
                return false;
            }
        }
        
        // ×¢×“×›×•×Ÿ ×ª×¦×•×’×” ××§×•××™×ª
        function updateLocalDisplay(itemId, newStatus) {
            const switchElement = document.querySelector(`.status-switch[data-order-id="${itemId}"]`);
            if (switchElement) {
                const options = switchElement.querySelectorAll('.status-option');
                options.forEach(option => {
                    if (option.dataset.status === newStatus) {
                        option.classList.add('active');
                    } else {
                        option.classList.remove('active');
                    }
                });
            }
            
            const singleBtn = document.querySelector(`.status-single-btn[data-order-id="${itemId}"]`);
            if (singleBtn) {
                const statusLabels = { pending: '×××ª×™×Ÿ', preparing: '×‘×”×›× ×”', ready: '××•×›×Ÿ' };
                const nextStatus = getNextStatus(newStatus);
                
                singleBtn.classList.remove('pending', 'preparing', 'ready');
                singleBtn.classList.add(newStatus);
                singleBtn.textContent = statusLabels[newStatus];
                singleBtn.dataset.nextStatus = nextStatus;
            }
        }
        
        // ×©×™× ×•×™ ×¡×˜×˜×•×¡ ×”×–×× ×” - ×¢× ×”×’× ×ª Race Conditions
        window.changeOrderStatus = async function(itemId, targetStatus) {
            try {
                const currentStatus = ordersStatus[itemId] || 'pending';
                
                if (currentStatus === targetStatus) {
                    return;
                }
                
                console.log('=== ××ª×—×™×œ ×©×™× ×•×™ ×¡×˜×˜×•×¡ ×¢× ×”×’× ×ª Race ===');
                console.log('××–×”×” ×¤×¨×™×˜:', itemId);
                console.log('×¡×˜×˜×•×¡ × ×•×›×—×™:', currentStatus);
                console.log('×¡×˜×˜×•×¡ ×™×¢×“:', targetStatus);
                
                // ×”×’× ×ª Race Conditions - ×©××™×¨×ª ×”×©×™× ×•×™ ×”×¤× ×™××™
                pendingChanges[itemId] = {
                    status: targetStatus,
                    timestamp: Date.now()
                };
                console.log('× ×©××¨ ×‘pending changes:', pendingChanges[itemId]);
                
                // ×¢×“×›×•×Ÿ ××™×™×“×™ ×‘×–×™×›×¨×•×Ÿ ×•×‘×ª×¦×•×’×”
                ordersStatus[itemId] = targetStatus;
                updateLocalDisplay(itemId, targetStatus);
                console.log('×¢×“×›×•×Ÿ ××§×•××™ ××™×™×“×™ ×‘×•×¦×¢');
                
                // ×¢×“×›×•×Ÿ ×‘×’×™×œ×™×•×Ÿ ×‘×¨×§×¢
                console.log('×©×•×œ×— ×¢×“×›×•×Ÿ ×œ×©×¨×ª...');
                const success = await updateStatusInSheet(itemId, targetStatus);
                console.log('×ª×•×¦××ª ×¢×“×›×•×Ÿ ×‘×©×¨×ª:', success);
                
                if (success) {
                    // ×”×¦×œ×™×— - ××¡×™×¨ ×pending
                    delete pendingChanges[itemId];
                    console.log('×”×•×©×œ× ×‘×”×¦×œ×—×”, ×”×•×¡×¨ ×pending');
                } else {
                    // × ×›×©×œ - ××—×–×™×¨ ×œ×¡×˜×˜×•×¡ ×”×§×•×“×
                    console.error('×›×™×©×œ×•×Ÿ ×‘×¢×“×›×•×Ÿ - ××—×–×™×¨ ×œ×¡×˜×˜×•×¡ ×§×•×“×');
                    delete pendingChanges[itemId];
                    ordersStatus[itemId] = currentStatus;
                    updateLocalDisplay(itemId, currentStatus);
                }
                
            } catch (error) {
                console.error('×©×’×™××” ×‘×¤×•× ×§×¦×™×™×ª changeOrderStatus:', error);
                // ×‘××§×¨×” ×©×œ ×©×’×™××”, ××—×–×™×¨ ×œ×¡×˜×˜×•×¡ ×”×§×•×“×
                delete pendingChanges[itemId];
                ordersStatus[itemId] = currentStatus;
                updateLocalDisplay(itemId, currentStatus);
            }
        }
        
        // ×˜×¢×™× ×ª ×¡×˜×˜×•×¡×™× ×©××•×¨×™×
        function loadStoredStatuses() {
            const stored = localStorage.getItem('ordersStatus');
            if (stored) {
                try {
                    ordersStatus = JSON.parse(stored);
                } catch (e) {
                    ordersStatus = {};
                }
            }
        }
        
        // ××ª×—×•×œ ×¨××©×•× ×™ ×¢× ×˜×¢×™× ×” ××™×™×“×™×ª
        async function initializeSystem() {
            updateLoadingProgress('××›×™×Ÿ ××ª ×”××¢×¨×›×ª...');
            
            // ×”×’×“×¨×ª Page Visibility
            setupPageVisibility();
            
            // ×˜×¢×™× ×ª × ×ª×•× ×™× ×©××•×¨×™×
            loadStoredStatuses();
            
            updateLoadingProgress('××ª×—×‘×¨ ×œ×©×¨×ª...');
            
            // ×”×ª×—×œ×” ××™×™×“×™×ª ××•×˜×•××˜×™×ª!
            isSystemActive = true;
            const toggleBtn = document.getElementById('toggleBtn');
            const statusInfo = document.getElementById('statusInfo');
            
            toggleBtn.textContent = '×¢×¦×•×¨ ××¢×¨×›×ª';
            toggleBtn.classList.remove('stopped');
            statusInfo.textContent = '×”××¢×¨×›×ª ×¤×¢×™×œ×” - ×›×œ 5 ×©× ×™×•×ª';
            statusInfo.classList.add('active');
            statusInfo.classList.remove('paused');
            
            // ×˜×¢×™× ×” ×¨××©×•× ×”
            await loadOrders();
            
            // ×”×ª×—×œ×ª ×¨×¢× ×•×Ÿ
            startRefreshing();
            
            // ×¢×¦×™×¨×” ××•×˜×•××˜×™×ª ××—×¨×™ 5 ×©×¢×•×ª
            autoStopTimeout = setTimeout(() => {
                stopSystem();
                alert('×”××¢×¨×›×ª × ×¢×¦×¨×” ××•×˜×•××˜×™×ª ××—×¨×™ 5 ×©×¢×•×ª');
            }, 5 * 60 * 60 * 1000);
            
            updateLoadingProgress('×”××¢×¨×›×ª ××•×›× ×”!');
            
            // ×”×¡×ª×¨×ª ××¡×š ×”×˜×¢×™× ×”
            setTimeout(hideLoadingScreen, 800);
        }
        
        // ××ª×—×•×œ ×”×“×£
        function init() {
            // ×”×•×¡×¤×ª event listener ×œ×›×¤×ª×•×¨ ×”×”×¤×¢×œ×”/×¢×¦×™×¨×”
            document.getElementById('toggleBtn').addEventListener('click', () => {
                if (isSystemActive) {
                    stopSystem();
                } else {
                    startSystem();
                }
            });
            
            // ×”×ª×—×œ×” ××™×™×“×™×ª ×¢× ××¡×š ×˜×¢×™× ×”
            initializeSystem();
        }
        
        // ×”×ª×—×œ×” ×›×©×”×“×£ × ×˜×¢×Ÿ
        document.addEventListener('DOMContentLoaded', init);
    </script>
